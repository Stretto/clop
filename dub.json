{
  "name"         : "clop",
  "description"  : "OpenCL OPtimizer DSL.",
  "targetType"   : "none",

  "configurations": [
      {
        "name"         : "default"
      },
      {
        "name"         : "debug-grammar",
        "debugVersions": ["DEBUG_GRAMMAR"]
      }
  ],
  "subPackages"  : [
      {
        "name"         : "runtime",
        "targetType"   : "library",
        "targetPath"   : "./lib",
        "sourcePaths"  : ["src"],
        "importPaths"  : ["src"],
        "lflags-linux" : ["-lOpenCL", "-lrt"],
        "lflags-osx"   : ["-framework", "OpenCL"],
        "dependencies" : {
          "derelict_extras-opencl" : ">=1.2.0",
          "pegged"                 : ">=0.0.0"
        }
      },
      "./examples/nw",
      "./examples/pf",
      "./examples/stencil"
  ]
}
