{
    "name"         : "clop",
    "description"  : "OpenCL OPtimizer DSL.",
    "targetType"   : "none",
    "buildTypes"   : {
        "debug"            : { "debugVersions" : ["DEBUG"] },
        "grammar"          : { "debugVersions" : ["DEBUG_GRAMMAR"] }
    },
    "subPackages"  : [
        {
            "name"         : "runtime",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "sourcePaths"  : ["clop/rt"],
            "lflags-linux" : ["-lOpenCL", "-lrt"],
            "lflags-osx"   : ["-framework", "OpenCL"],
            "dependencies" : {
                "derelict-cl" : "~>1.2.2",
                "pegged"      : "~>0.1.0"
            }
        },
        {
            "name"         : "compiler",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "sourcePaths"  : ["clop"],
            "excludedSourceFiles" : ["clop/rt/ctx.d"],
            "lflags-linux" : ["-lOpenCL", "-lrt"],
            "lflags-osx"   : ["-framework", "OpenCL"],
            "dependencies" : {
                "derelict-cl" : "~>1.2.2",
                "pegged"      : "~>0.1.0"
            }
        },
        "./examples/nw",
        "./examples/pf",
        "./examples/stencil"
    ]
}
