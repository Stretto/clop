{
    "name"         : "clop",
    "description"  : "OpenCL OPtimizer DSL.",
    "authors"      : ["Dmitri Makarov"],
    "copyright"    : "Copyright Â© 2014-2015, Dmitri Makarov",
    "license"      : "MIT",
    "targetType"   : "none",
    "subPackages"  : [
        {
            "name"         : "compiler",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "importPaths"  : ["clop", "clop/ct"],
            "sourcePaths"  : ["clop"],
            "dflags"       : ["-Jutils"],
            "dependencies" : {
                "derelict-cl" : "~>1.2.2",
                "pegged"      : "~>0.2.1",
                "clop:runtime": "*"
            },
            "excludedSourceFiles" : [
                "clop/ct/grammar.d",
                "clop/rt/ctx.d",
                "clop/rt/instance.d",
                "clop/rt/ndarray.d"
            ],
            "buildTypes"   : {
                "verbose"  : { "debugVersions" : ["VERBOSE"] },
                "grammar"  : { "debugVersions" : ["GRAMMAR"] },
                "testing"  : { "buildOptions"  : ["coverage", "unittests"] }
            }
        },
        {
            "name"         : "runtime",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "importPaths"  : ["clop", "clop/rt"],
            "sourcePaths"  : ["clop/rt"],
            "dependencies" : { "derelict-cl" : "~>1.2.2" },
            "buildTypes"   : {
                "verbose"  : { "debugVersions" : ["VERBOSE"] },
                "grammar"  : { "debugVersions" : ["GRAMMAR"] },
                "testing"  : { "buildOptions"  : ["coverage", "unittests"] }
            }
        },
        "./tools",
        "./examples/algebra",
        "./examples/bp",
        "./examples/nw",
        "./examples/pf",
        "./examples/stencil"
    ],
}
