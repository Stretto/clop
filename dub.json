{
    "name"         : "clop",
    "description"  : "OpenCL OPtimizer DSL.",
    "authors"      : ["Dmitri Makarov"],
    "copyright"    : "Copyright Â© 2014-2015, Dmitri Makarov",
    "license"      : "MIT",
    "targetType"   : "none",
    "buildTypes"   : {
        "verbose"          : { "debugVersions" : ["VERBOSE"] },
        "grammar"          : { "debugVersions" : ["GRAMMAR"] }
    },
    "subPackages"  : [
        {
            "name"         : "compiler",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "sourcePaths"  : ["clop"],
            "dependencies" : {
                "derelict-cl" : "~>1.2.2",
                "pegged"      : "~>0.2.1"
            },
            "excludedSourceFiles" : ["clop/rt/ctx.d"]
        },
        {
            "name"         : "runtime",
            "targetType"   : "library",
            "targetPath"   : "./lib",
            "sourcePaths"  : ["clop/rt"],
            "dependencies" : { "derelict-cl" : "~>1.2.2" }
        },
        "./examples/algebra",
        "./examples/bp",
        "./examples/nw",
        "./examples/pf",
        "./examples/stencil"
    ],
}
